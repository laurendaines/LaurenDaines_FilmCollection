@{
}

@model IQueryable<Movie> 

<!--title-->
<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>

<br />

<!--table to view collection entered by the user-->
<table id="movies">

    <tr>
        <th>Category</th>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Lent To</th>
        <th>Notes</th>
    </tr>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <!--displays stores movie information-->
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.DirectorFirstName + " " + @x.DirectorLastName</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <!--remove-->
                <!--edit-->
            </tr>
        }

    </tbody>

</table>