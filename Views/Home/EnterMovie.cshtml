@{
}

@model Movie

<!--title-->
<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>

<br />

<!--form to input movies-->
<form method="post" asp-action="Movie">

    <table id="movies">

        <tr>
            <th><label asp-for="Category">Category</label></th>
            <th><label asp-for="Title">Title</label></th>
            <th><label asp-for="Year">Year</label></th>
            <th><label asp-for="DirectorFirstName">Director's First Name</label></th>
            <th><label asp-for="DirectorLastName">Director's Last Name</label></th>
            <th><label asp-for="Rating">Rating</label></th>
            <th><label asp-for="Edited">Edited</label></th>
            <th><label asp-for="LentTo">Lent To</label></th>
            <th><label asp-for="Notes">Notes</label></th>
        </tr>

        <tr>
            <td>
                <select id="category" asp-for="Category">
                    <option value="Action/Adventure">Action/Adventure</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Drama">Drama</option>
                    <option value="Family">Family</option>
                    <option value="Horror/Suspense">Horror/Suspense</option>
                    <option value="Miscellaneous">Miscellaneous</option>
                    <option value="Television">Television</option>
                    <option value="VHS">VHS</option>
                </select>
            </td>
            <td><input type="text" id="title" asp-for="Title" size=2 value="" /></td>
            <td><input type="number" id="year" asp-for="Year" size=2 value="" /></td>
            <td><input type="text" id="director" asp-for="DirectorFirstName" size=2 value="" /></td>
            <td><input type="text" id="director" asp-for="DirectorLastName" size=2 value="" /></td>
            <td>
                <select id="rating" asp-for="Rating">
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </td>
            <td>
                <select id="edited" asp-for="Edited">
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </td>
            <td><input type="text" id="lentto" asp-for="LentTo" size=2 value="" /></td>
            <td><input type="text" id="notes" asp-for="Notes" size=2 value="" /></td>
        </tr>

    </table>

    <br /><br />

    <!--button to submit information to storage-->
    <button type="submit" style="background-color: #4CAF50; border: none; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer;" class="button" value="Submit">
        Submit
    </button>
    
    <div asp-validation-summary="All"></div>

</form>